<body style="font-size: 16px;">
    <!-- <div class="title">Tax Invoice</div> -->
    <div class="top-section">
        <div class="left-section">
           <div class="big-font bold-text"><%=@booking_rewards_lead["broker"]["name"]%></div>
           <div>
               <span>Realtor</span>
           </div>

        </div>

    </div>
    <br/><br/>
    <div class="">
        <div class="big-font">Unit Details:</div>
        <br/>
        <div>
            <div class="field-container">
                <div class="field">
                    <label>Date</label>
                    <span class="value"><%=@booking_rewards_lead["booking_date"]%></span>
                </div>
                <div class="field">
                    <label>Booking Form Number</label>
                    <span class="value"><%=@booking_rewards_lead["booking_form_number"]%></span>
                </div>
            </div>
            <div class="field-container">
                <div class="field">
                    <label>Unit Number</label>
                    <span class="value"><%=@booking_rewards_lead["unit_number"]%></span>
                </div>
                <div class="field">
                    <label>Project</label>
                    <span class="value"><%=@booking_rewards_lead["project"]%></span>
                </div>
            </div>
            <div class="field-container">
                <div class="field">
                    <label>Building Name</label>
                    <span class="value"><%=@booking_rewards_lead["building_name"]%></span>
                </div>
                <div class="field">
                    <label>Wing</label>
                    <span class="value"><%=@booking_rewards_lead["wing"]%></span>
                </div>
            </div>
            <div class="field-container">
                <div class="field">
                    <label>RERA Carpet Area</label>
                    <span class="value"><%=@booking_rewards_lead["rera_carpet_area"]%></span>
                </div>
            </div>
            <div class="field-container">
                <div class="field">
                    <label>Agreement Value</label>
                    <span class="value"><%=@booking_rewards_lead["agreement_value"]%></span>
                </div>
            </div>

        </div>

    </div>
    <br/><br/>
    <div class="">
        <div class="big-font">Client Details:</div>
        <!-- <br/> -->
        <div>
            <div class="field-container">
                <div class="field">
                    <label>Client name</label>
                    <span class="value"><%=@booking_rewards_lead["booking_client"]["name"]%></span>
                </div>
            </div>
        </div>
    </div>
    <br/><br/>
    <div class="">
        <div class="big-font">Token Details:</div>
        <!-- <br/> -->
        <div>
            <div class="field-container">
                <div class="field">
                    <label>Token amount</label>
                    <span class="value"><%=@booking_rewards_lead["booking_payment"]["token_amount"] %></span>
                </div>
            </div>
        </div>
    </div>

    <div style="text-align:center">This is a Computer Generated Booking Form</div>
