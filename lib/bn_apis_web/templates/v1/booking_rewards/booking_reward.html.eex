            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            padding: 8px 0;
            -ms-flex-wrap: wrap;
                flex-wrap: wrap;
        }

        label{
            min-width: 200px;
            color: #777;
        }
        .w-100{
            width: 100% !important;
        }
